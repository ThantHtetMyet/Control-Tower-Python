# PDF Generator Configuration
# Copy this file to .env and update with your values

# ============================================
# API Configuration
# ============================================
API_BASE_URL=https://localhost:7240
API_TIMEOUT=60
API_AUTH_EMAIL=admin@willowglen.com
API_AUTH_PASSWORD=Admin@123

# ============================================
# MQTT Broker Configuration
# ============================================
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_KEEPALIVE=60

# ============================================
# Database Configuration
# ============================================
DB_SERVER=localhost
DB_NAME=ControlTower
DB_USERNAME=
DB_PASSWORD=
DB_DRIVER=ODBC Driver 17 for SQL Server

# ============================================
# File Paths
# ============================================
# PDF Output Directory (where all generated PDFs are saved)
PDF_OUTPUT_DIR=C:\ControlTower\PDFs

# Image Base Path (where uploaded report images are stored)
IMAGE_BASE_PATH=C:\Temp\ReportFormImages

# ============================================
# PDF Generation Settings
# ============================================
PDF_TIMEOUT_SECONDS=120

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=pdf_service.log

